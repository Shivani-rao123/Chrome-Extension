{
  "manifest_version": 3,
  "name": "AI Chat Organizer",
  "version": "1.0",
  "description": "Save and resume conversations across AI chat platforms",
  "permissions": ["storage", "tabs", "activeTab","contextMenus"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
